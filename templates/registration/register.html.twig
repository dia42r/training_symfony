{% extends "base.html.twig"%}

{% block body %}
<div class="container">
    
    <h2 class="form-signin-heading">Register </h2>
    <form class="form-signin"  method="post">
        <label for="username" class="sr-only">Username : </label>
        <input type="text" id="username" class="form-control" name="user[username]" value="" placeholder="User Name" required="required">
        <label for="email" class="sr-only">Email: </label>
        <input type="email" id="user_email" class="form-control" name="user[email]" value="" placeholder="Email" required="required">
        <label for="username" class="sr-only">Password : </label>
        <input type="password" id="user_password_first" class="form-control" name="user[plainPassword][first]" value="" placeholder="Password" required="required">
        <label for="username" class="sr-only">Repeat Password : </label>
        <input type="password" id="user_password_second" class="form-control" name="user[plainPassword][second]" value="" placeholder="Repeat Password" required="required">
        
        <button class="btn btn-lg btn-primary btn-block" type="submit">Register Now  ! </button>
    </form>

    
